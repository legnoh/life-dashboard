<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.lkj.life.dashboard.gcal.fixer.plist</string>
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/google-calendar-ics-fixer</string>
        <string>{{ ansible_facts['env']['HOME'] }}/Library/Mobile Documents/com~apple~CloudDocs/ical/business.ics</string>
        <string>{{ ansible_facts['env']['HOME'] }}/grafstation/configs/html/business.ics</string>
    </array>
    <key>WorkingDirectory</key>
    <string>{{ ansible_facts['env']['HOME'] }}</string>
    <key>StandardOutPath</key>
    <string>/tmp/gcal-fixer.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/gcal-fixer.err</string>
    <key>StartCalendarInterval</key>
    <array>
{% for i in range(12) %}
        <dict>
            <key>Minute</key>
            <integer>{{ i*5 }}</integer>
        </dict>
{% endfor %}
    </array>
</dict>
</plist>
