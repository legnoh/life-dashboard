    <key>WorkingDirectory</key>
    <string>/tmp</string>
    <key>StandardOutPath</key>
    <string>/tmp/vlc.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/vlc.err</string>
    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>
