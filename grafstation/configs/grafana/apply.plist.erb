<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.lkj.life.dashboard.grafstation.grafana.apply</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>TF_VAR_OPENWEATHER_CITY</key>
        <string><%= ow_city %></string>
        <key>TF_VAR_YOUTUBE_PLAYLIST_ID</key>
        <string><%= yt_playlist %></string>
    </dict>
    <key>ProgramArguments</key>
    <array>
        <string>/Users/<%= user %>/ghq/github.com/legnoh/life-dashboard/grafstation/configs/grafana/apply.sh</string>
    </array>
    <key>WorkingDirectory</key>
    <string>/Users/<%= user %>/ghq/github.com/legnoh/life-dashboard/grafstation/configs/grafana</string>
    <key>StandardOutPath</key>
    <string>/tmp/grafana-apply.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/grafana-apply.err</string>
    <key>StartCalendarInterval</key>
    <array>
        <% minutes = 0..59 %>
        <% minutes.each do |min| %>
        <dict>
            <key>Minute</key>
            <integer><%= min %></integer>
        </dict>
    </array>
</dict>
</plist>
